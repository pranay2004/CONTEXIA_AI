            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"platform\": \"twitter\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/social/accounts/initiate-oauth/",
              "host": ["{{base_url}}"],
              "path": ["api", "social", "accounts", "initiate-oauth", ""]
            }
          }
        },
        {
          "name": "2. Connect Twitter Account",
          "request": {
            "method": "POST",
