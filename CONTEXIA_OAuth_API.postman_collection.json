  "item": [
    {
      "name": "1. Authentication",
      "item": [
        {
          "name": "Register User",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"email\": \"test@example.com\",\n  \"password\": \"SecurePassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/register/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "register", ""]
            }
          }
        },
        {
          "name": "Get JWT Token",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"jwt_token\", jsonData.access);"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"SecurePassword123!\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/token/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "token", ""]
            }
          }
        },
        {
          "name": "Refresh JWT Token",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"refresh\": \"YOUR_REFRESH_TOKEN\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/auth/token/refresh/",
              "host": ["{{base_url}}"],
              "path": ["api", "auth", "token", "refresh", ""]
            }
          }
        }
      ]
    },
    {
      "name": "2. Social Accounts - OAuth Flow",
      "item": [
        {
          "name": "1. Initiate LinkedIn OAuth",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var jsonData = pm.response.json();",
                  "pm.collectionVariables.set(\"oauth_state\", jsonData.state);",
                  "console.log(\"Authorization URL: \" + jsonData.authorization_url);",
                  "console.log(\"Copy this URL and open in browser to authorize\");"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"platform\": \"linkedin\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/social/accounts/initiate-oauth/",
              "host": ["{{base_url}}"],
              "path": ["api", "social", "accounts", "initiate-oauth", ""]
            }
          }
        },
        {
          "name": "2. Connect LinkedIn Account",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              },
              {
                "key": "Authorization",
                "value": "Bearer {{jwt_token}}"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"platform\": \"linkedin\",\n  \"code\": \"AUTHORIZATION_CODE_FROM_CALLBACK\",\n  \"state\": \"{{oauth_state}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/social/accounts/connect/",
              "host": ["{{base_url}}"],
              "path": ["api", "social", "accounts", "connect", ""]
            }
          }
        },
        {
          "name": "1. Initiate Twitter OAuth",
          "event": [
            {
              "listen": "test",
