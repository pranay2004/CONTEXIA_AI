{
  "info": {
    "name": "CONTEXIA Social Media OAuth API",
    "description": "Complete API collection for testing social media OAuth integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://localhost:8000",
      "type": "string"
    },
    {
      "key": "jwt_token",
      "value": "",
      "type": "string"
    },
    {
      "key": "oauth_state",
      "value": "",
      "type": "string"
    },
    {
      "key": "social_account_id",
      "value": "",
