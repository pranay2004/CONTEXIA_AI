              "mode": "raw",
              "raw": "{\n  \"platform\": \"twitter\",\n  \"code\": \"AUTHORIZATION_CODE_FROM_CALLBACK\",\n  \"state\": \"{{oauth_state}}\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/api/social/accounts/connect/",
              "host": ["{{base_url}}"],
              "path": ["api", "social", "accounts", "connect", ""]
            }
          }
        }
