# ============================================
# CONTEXIA - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control
# ============================================

# ============================================
# Django Configuration
# ============================================
SECRET_KEY=your-super-secret-django-key-at-least-50-characters-long
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# ============================================
# Database Configuration (PostgreSQL)
# ============================================
DB_NAME=contexia_db
DB_USER=contexia_user
DB_PASSWORD=your_secure_password_here
DB_HOST=localhost
DB_PORT=5432

# ============================================
# AI Provider Configuration
# ============================================
# Choose one or configure both for fallback

# Option 1: OpenAI (Primary - Recommended)
OPENAI_API_KEY=sk-your-openai-api-key-here
AI_PROVIDER=openai  # Options: 'openai' or 'gemini'

# Option 2: Google Gemini (Alternative/Fallback)
GOOGLE_API_KEY=your-google-gemini-api-key-here

# ============================================
# AI Image Generation APIs (Optional)
# ============================================
# These are optional - system works with manual uploads

NANO_BANANA_API_KEY=your-nano-banana-api-key-here
FAL_API_KEY=your-fal-ai-api-key-here
FREEPIK_API_KEY=your-freepik-api-key-here

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0

# ============================================
# Celery Configuration
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=django-db

# ============================================
# CORS Settings (Frontend URL)
# ============================================
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000

# ============================================
# Social Media OAuth (Optional)
# ============================================
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret
TWITTER_API_KEY=your-twitter-api-key
TWITTER_API_SECRET=your-twitter-api-secret

# ============================================
# Email Configuration (Optional)
# ============================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
